---
import ButtonFormular from "./ButtonFormular.astro";
---

<div class="forms_container">
  <div class="border border-5 border-black bg-gray-500 p-12">
    <div class="flex flex-col items-center pt-28 md:pt-60">
      <!-- Centered Header -->
      <h3 class="text-4xl font-bold text-center mb-8 text-font-color">CONTACT ME</h3>
    </div>
    <form class="max-w-sm mx-auto">
      <label for="website-admin" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"></label>
      <div class="flex">
        <input
          type="text"
          id="website-admin"
          class="rounded-lg bg-gray-50 border border-gray-300 text-gray-900 focus:ring-blue-500 focus:border-blue-500 block flex-1 min-w-0 w-full text-sm p-2.5 dark:placeholder-gray-400 dark:focus:border-blue-500"
          placeholder="Name"
        />
      </div>
    </form>

    <form class="max-w-sm mx-auto">
      <label for="website-admin" class="block mb-2 text-sm font-medium text-gray-900"></label>
      <div class="flex">
        <input
          type="email"
          id="website-admin"
          class="rounded-lg bg-gray-50 border border-gray-300 text-gray-900 focus:ring-blue-500 focus:border-blue-500 block flex-1 min-w-0 w-full text-sm p-2.5 dark:placeholder-gray-400 dark:focus:border-blue-500"
          placeholder="Email"
        />
      </div>
    </form>

    <form class="max-w-sm mx-auto">
      <label for="message" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"></label>
      <textarea
        id="message"
        rows="6"
        class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
        placeholder="Message..."></textarea>
      <div class="button flex flex-col items-center pt-4 pb-12"></div>
      <ButtonFormular />
    </form>
  </div>
</div>
