---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/tailwind.css";
import "animate.css";
const { title } = Astro.props;
import ScrollToTop from "../components/ScrollToTop.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg" href="/illustrations/logo.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="robots" content="noindex" />
    <meta name="title" content={Astro.props.title} />
    <meta name="description" content={Astro.props.description} />
    <meta property="og:title" content={Astro.props.ogtitle} />
    <meta property="og:description" content={Astro.props.ogdescription} />
    <title>{Astro.props.title}</title>
  </head>
  <body>
    <header>
      <Header />
    </header>

    <main class="overflow-x-hidden">
      <slot />
    </main>

    <footer>
      <Footer />
    </footer>
    <ScrollToTop />
  </body>
</html>
